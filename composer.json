{
    "name": "dahovitech/smart-crud-bundle",
    "description": "A Symfony bundle to simplify CRUD operations with advanced features like translations and user management.",
    "type": "symfony-bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Dahovi",
            "email": "contact@dahovi.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "symfony/framework-bundle": ">= 6.*",
        "doctrine/orm": "*",
        "gedmo/doctrine-extensions": "*",
        "symfony/translation": "*",
        "symfony/security-bundle": "*",
        "symfony/form": "*",
        "symfony/validator": "*",
        "symfony/twig-bundle": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "*",
        "symfony/browser-kit": "*",
        "symfony/css-selector": "*",
        "symfony/dom-crawler": "*",
        "symfony/maker-bundle": "*",
        "fakerphp/faker": "*"
    },
    "autoload": {
        "psr-4": {
            "Dahovitech\\SmartCrudBundle\\": ""
        }
    },
    
    "scripts": {
        "test": "phpunit",
        "lint": "phpcs src/ tests/ --standard=PSR12",
        "fix": "phpcbf src/ tests/ --standard=PSR12"
    },
    "minimum-stability": "dev"
}