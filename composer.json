{
    "name": "dahovitech/smart-crud-bundle",
    "description": "A Symfony bundle to simplify CRUD operations with advanced features like translations and user management.",
    "type": "symfony-bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Dahovi",
            "email": "contact@dahovi.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "symfony/framework-bundle": "^6.0 || ^7.0",
        "doctrine/orm": "^2.10",
        "gedmo/doctrine-extensions": "^3.10",
        "symfony/translation": "^6.0 || ^7.0",
        "symfony/security-bundle": "^6.0 || ^7.0",
        "symfony/form": "^6.0 || ^7.0",
        "symfony/validator": "^6.0 || ^7.0",
        "symfony/twig-bundle": "^6.0 || ^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "symfony/browser-kit": "^6.0 || ^7.0",
        "symfony/css-selector": "^6.0 || ^7.0",
        "symfony/dom-crawler": "^6.0 || ^7.0",
        "symfony/maker-bundle": "^1.48",
        "fakerphp/faker": "^1.21"
    },
    "autoload": {
        "psr-4": {
            "Dahovitech\\SmartCrudBundle\\": "src/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.0-dev"
        }
    },
    "scripts": {
        "test": "phpunit",
        "lint": "phpcs src/ tests/ --standard=PSR12",
        "fix": "phpcbf src/ tests/ --standard=PSR12"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}